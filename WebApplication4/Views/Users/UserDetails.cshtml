@model Core.Users.Models.UserViewModel;

<div class="container">
  <div class="row">
    <form>
      <fieldset disabled>
        <legend>User details</legend>
        <div class="mb-3">
          <label for="name-input" class="form-label">Email</label>
          <input type="text" value="@Model.Email" id="name-input" class="form-control" placeholder="Name">
        </div>
        <div class="mb-3">
          <label for="age-input" class="form-label">Age</label>
          <input type="text" value="@Model.Age" id="age-input" class="form-control" placeholder="Age">
        </div>
        <div class="mb-3">
          <label class="form-label">Photo</label>
          <p>
              @if (Model.PhotoPath != null)
              {
                <img src="@Url.Content(Model.PhotoPath)" alt="">
              }
          </p>
        </div>
      </fieldset>
      <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
      <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
  </div>
</div>
